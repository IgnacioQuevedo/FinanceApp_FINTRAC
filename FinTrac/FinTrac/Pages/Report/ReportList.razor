@page "/Reports"
@layout MainLayout;
<h2>Report List</h2>


<table class="table table-striped table-bordered claseTabla">
    <thead>
    <tr>
        <th>Name of Report </th>
        <th> Operation Method </th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>
            <label for="title" style="font-weight: bold; font-size: larger">
